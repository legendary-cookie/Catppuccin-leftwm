;-------------------------
; Catppuccin Mocha Palette
; Maintainer: justTOBBI
;--------------------------

[colors]
 base = #1e1e2e
 mantle = #181825
 crust = #11111b

 text = #cdd6f4
 subtext0 = #a6adc8
 subtext1 = #bac2de

 surface0 = #313244
 surface1 = #45475a
 surface2 = #585b70
 
 overlay0 = #6c7086
 overlay1 = #7f849c
 overlay2 = #9399b2
 

 blue = #89b4fa
 lavender = #b4befe
 sapphire = #74c7ec
 sky = #89dceb
 teal = #94e2d5
 green = #a6e3a1
 yellow = #f9e2af
 peach = #fab387
 maroon = #eba0ac
 red = #f38ba8
 mauve = #cba6f7
 pink = #f5c2e7
 flamingo = #f2cdcd
 rosewater = #f5e0dc

 transparent = #FF00000

[bar/mainbar]
monitor = ${env:MONITOR}
width = 100%
fixed-center = true
height = 48
background = ${colors.base}
foreground = ${colors.text}
font-0 = JetBrainsMono Nerd Font:style=Bold:size=14;3
font-1 = Font Awesome 6 Free,Font Awesome 6 Free Solid:style=Solid:size=14
font-2 = Font Awesome 6 Brands,Font Awesome 6 Brands Regular:style=Regular:size=14
seperator = "|"
seperator-foreground = ${colors.subtext3}
modules-left = ewmh
modules-center =
modules-right = network cpu mem volume date time
dpi = 96
enable-ipc = true

[module/network]
type = internal/network
interface-type = wireless
interface = wlan0
unknown-as-up = true
label-disconnected = " not connected "
label-disconnected-foreground = ${colors.red}
format-disconnected = <label-disconnected>
label-connected = %essid% %downspeed:7%
label-connected-foreground = ${colors.green}
format-connected = <label-connected>

[module/ewmh]
type = internal/xworkspaces
label-active = " %name% "
label-active-background = ${colors.surface0}
label-active-foreground = ${colors.text}
label-occupied = " %name% "
label-occupied-background = ${colors.surface1}
label-urgent = " %name% "
label-urgent-background = ${colors.maroon}
label-urgent-foreground = ${colors.overlay0}
label-empty = " %name% "
label-empty-foreground = ${colors.text}

[module/date]
type = internal/date
date = " %a, %b %d "
format-foreground = ${colors.mauve}

[module/time]
type = internal/date
format-foreground = ${colors.mauve}
date = " %H:%M "

[module/cpu]
type = internal/cpu
interval = 0.5
label = " CPU:%percentage:2%% "
label-foreground = ${colors.sky}

[module/volume]
type = internal/pulseaudio
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
label-muted = muted %percentage:2%%
label-muted-foreground = #666
label-volume = "sound %percentage:2%%"
label-volume-foreground = ${colors.teal}
click-right = pavucontrol

[module/mem]
type = internal/memory
interval = 2
format-foreground = ${colors.sky}
label = "ï‚€  %mb_used%"
label-padding = 1

[module/filesystem]
type = internal/fs
; Mountpoints to display
mount-0 = /
; Seconds to sleep between updates
interval = 60
fixed-values = true
spacing = 4
warn-percentage = 75

label-mounted = "%free%/%total% used "
